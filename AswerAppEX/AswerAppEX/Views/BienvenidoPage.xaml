<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AswerAppEX.Views.BienvenidoPage">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50,25,50,25">
        <Label Text="Bienvenido"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        
            <Button x:Name="BtnEntrar" Text="ENTRAR" BackgroundColor="Gold" CornerRadius="15" Clicked="BtnEntrar_Clicked"/>
            <Button x:Name="BtnAddAsk" Text="Agregar" BackgroundColor="Gold" CornerRadius="15" Clicked="BtnAddAsk_Clicked"/>
            <Button x:Name="BtnAskList" Text="AskList" BackgroundColor="Gold" CornerRadius="15" Clicked="BtnAskList_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>